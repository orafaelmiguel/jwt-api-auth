{
    "compilerOptions": {
      "target": "ES2020",
      "module": "commonjs",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "./dist",
      "rootDir": "./src",
      "resolveJsonModule": true,
      "baseUrl": "./src",
      "paths": {
        "*": ["./node_modules/*"]
      },
      "typeRoots": ["./src/@types"]
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"]
  }